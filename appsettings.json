{
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "user_profile_route": {
        "ClusterId": "user_profile_cluster",
        "Match": {
          "Path": "/userprofile/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/userprofile" }
        ]
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_service": {
            "Address": "http://auth-service:80/"
          }
        }
      },
      "user_profile_cluster": {
        "Destinations": {
          "user_profile_service": {
            "Address": "http://user-profile-service:80/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}

